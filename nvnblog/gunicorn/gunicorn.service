[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/nvnblog
ExecStart=/home/ubuntu/nvnblog/venv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind 0.0.0.0:8000 \
          nvnblog.wsgi:application
[Install]
WantedBy=multi-user.target
